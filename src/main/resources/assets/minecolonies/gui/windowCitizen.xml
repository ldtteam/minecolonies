<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        inherit="minecolonies:gui/windowBase.xml"
        xsi:noNamespaceSchemaLocation="file:../../../../java/com/minecolonies/blockout/blockOut.xsd">
    <label id="name" size="100% 11" color="black" textalign="BOTTOM_MIDDLE" pos="0 5"/>
    <group size="100% 50%" pos="20 10">
        <view id="healthBar" size="100% 11"/>
        <view id="saturationBar" size="100% 11"/>
        <view id="xpBar" size="100% 11"/>
        <label id="xpLabel" size="100% 11" color="black" textalign="MIDDLE"/>
    </group>
    <label id="title" size="100% 11" pos="0 70"
           textalign="TOP_MIDDLE" color="black"
           label="$(com.minecolonies.coremod.gui.citizen.skills)"/>
    <box padding="3" size="100 61" pos="40 85">
        <group size="100% 100%">
            <label id="strength" size="100% 11" color="black"/>
            <label id="endurance" size="100% 11" color="black"/>
            <label id="charisma" size="100% 11" color="black"/>
            <label id="intelligence" size="100% 11" color="black"/>
            <label id="dexterity" size="100% 11" color="black"/>
        </group>
    </box>
    <button id="inventory"
            align="BOTTOM_MIDDLE" size="116 20" pos="0 13"
            label="$(container.inventory)"/>
</window>
