<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" size="190 244" pause="false"
        lightbox="false"
        xsi:noNamespaceSchemaLocation="file:../../../../../api/java/com/minecolonies/blockout/blockOut.xsd">
    <switch id="pages" size="100% 100%">
        <view id="pageActions" size="100% 100%">
            <layout source="minecolonies:gui/layouthuts/layouthutpageactions.xml"/>
        </view>
        <view id="sifterSettings" size="100% 100%">
            <image source="minecolonies:textures/gui/builderhut/builder_papper.png" size="190 244"/>
            <label size="130 11" pos="30 24" textalign="MIDDLE" color="black"
                   label="$(com.minecolonies.coremod.gui.workerhuts.sifterSettings):"/>

            <input id="qty" size="50 18" pos="30 40" maxlength="25"/>
            <label size="86 17" pos="80 40" textalign="MIDDLE" color="black" id="maxSifted"
                   label="$(com.minecolonies.coremod.gui.workerhuts.sifterInfo)"/>

            <buttonimage id="save" size="86 17" pos="52 60" textcolor="black"
                         source="minecolonies:textures/gui/builderhut/builder_button_medium.png" label="$(com.minecolonies.coremod.gui.workerhuts.save)"/>


            <label size="130 11" pos="30 100" textalign="MIDDLE" color="black"
                   label="$(com.minecolonies.coremod.gui.workerhuts.meshSettings):"/>
            <list id="resources" size="164 136" pos="13 120">
                <box size="100% 17" linewidth="2">
                    <itemicon id="resourceIcon" size="17 17" pos="0 0"/>
                    <label id="resourceName" size="100 12" pos="20 1" color="white"/>
                    <buttonimage label="$(com.minecolonies.coremod.gui.workerhuts.buy)" id="buyMesh" pos="120 1" size="29 15"
                                 source="minecolonies:textures/gui/builderhut/builder_button_very_small.png" textcolor="black"/>
                </box>
            </list>

        </view>
        <view id="sifterPrestock">
            <image source="minecolonies:textures/gui/builderhut/builder_papper.png" size="190 244"/>
            <label size="130 11" pos="30 14" textalign="MIDDLE" color="black"
                   label="$(com.minecolonies.coremod.gui.warehouse.stock)"/>
            <list id="resourcesstock" size="170 100" pos="13 50">
                <box size="100% 17" linewidth="2">
                    <itemicon id="resourceIcon" size="17 17" pos="0 0"/>
                    <label id="resourceName" size="90 12" pos="20 1" color="black"/>
                    <label id="resourceQty" size="12 12" pos="115 1" color="black"/>

                    <buttonimage label="X" id="removeStock" pos="130 1" size="29 15"
                                 source="minecolonies:textures/gui/builderhut/builder_button_very_small.png" textcolor="red"/>
                </box>
            </list>
            <buttonimage id="addStock" size="86 17" pos="50 160" textcolor="black"
                         source="minecolonies:textures/gui/builderhut/builder_button_medium.png"
                         label="$(com.minecolonies.coremod.gui.warehouse.add)"/>
        </view>
    </switch>
    <buttonimage id="prevPage" size="18 10" pos="13 13" source="minecolonies:textures/gui/builderhut/turn_page_left.png"/>
    <buttonimage id="nextPage" size="18 10" pos="159 13" source="minecolonies:textures/gui/builderhut/turn_page_right.png"/>
    <label id="pageNum" size="20 11" pos="158 222" textalign="MIDDLE" label="" color="black"/>
</window>