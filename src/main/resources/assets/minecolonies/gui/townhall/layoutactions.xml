<window size="524 243" pause="false" lightbox="false">

    <layout source="minecolonies:gui/townhall/windowtownhall.xml"/>
    <label size="148 11" color="green" pos="100 24"
           label="$(com.minecolonies.coremod.gui.townhall.currtownhallname)"/>
    <label size="148 11" id="name" color="black" pos="100 35"/>

    <button id="build" size="120 19" pos="113 84"
            label="$(com.minecolonies.coremod.gui.townhall.build)"/>
    <button id="rename" size="120 19" pos="113 107"
            label="$(com.minecolonies.coremod.gui.townhall.rename)"/>
    <button id="mercenaries" size="120 19" pos="113 130"
            label="$(com.minecolonies.coremod.gui.townhall.mercenary)"/>
    <buttonimage id="patreon" size="120 19" pos="113 153" source="minecolonies:textures/gui/patreonwidget.png"
                 label="$(com.minecolonies.coremod.gui.townhall.patreon)" tooltip="$(com.minecolonies.coremod.gui.townhall.patreon.hover)"/>
    <button id="map" size="120 19" pos="113 186"
            label="$(com.minecolonies.coremod.gui.townHall.map)"/>

    <label size="148 11" pos="271 30" style="bold" color="green"
           label="$(com.minecolonies.coremod.gui.townhall.allies)"/>
    <list id="allies" size="150 75" pos="271 40">
        <box size="100% 25" linewidth="1">
            <label id="name" size="100 12" pos="5 0" color="black"/>
            <label id="dist" size="40 13" pos="112 12" color="black"/>
            <button id="tp" size="100 12" pos="5 12" label="$(com.minecolonies.coremod.permission.teleport_to_colony)"/>
        </box>
    </list>

    <label size="148 11" pos="271 130" style="bold" color="red"
           label="$(com.minecolonies.coremod.gui.townhall.feuds)"/>
    <list id="feuds" size="150 50" pos="271 140">
        <box size="100% 25" linewidth="1">
            <label id="name" size="100 12" pos="5 0" color="black"/>
            <label id="dist" size="40 12" pos="105 0" color="black"/>
        </box>
    </list>
</window>
