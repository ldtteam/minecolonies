<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" size="380 244" pause="false"
        lightbox="false"
        xsi:noNamespaceSchemaLocation="file:../../../../../../api/java/com/minecolonies/blockout/blockOut.xsd">

    <image source="minecolonies:textures/gui/citizen/colonist_papper.png" size="190 244" pos="95 0"/>

    <switch id="head" size="100% 100%" pos="0 0">
        <view>
            <switch id="pages" size="190 100%" pos="95 0">
                <view id="pageActions" size="100% 100%">
                    <layout source="minecolonies:gui/citizen/main.xml"/>
                </view>
                <view id="happinessModifierView" size="100% 100%">
                    <label id="happinessModifier" pos="25 32" size="136 11" textalign="MIDDLE" color="black"/>

                </view>
                <view id="jobView" size="100% 100%">
                    <label id="jobLabel" pos="25 32" size="136 11" textalign="MIDDLE" color="black"/>
                    <text id="skillexplanation" pos="30 44" size="150 30" color="black"/>

                    <label id="primary" pos="45 74" size="136 11" color="black"/>
                    <image id="primaryimg" pos="30 74" size="11 11"/>

                    <label id="comp1" pos="45 86" size="136 11" color="black"/>
                    <image id="comp1img" pos="30 86" size="11 11"/>

                    <label id="adverse1" pos="45 98" size="136 11" color="black"/>
                    <image id="adverse1img" pos="30 98" size="11 11"/>

                    <label id="secondary" pos="45 124" size="136 11" color="black"/>
                    <image id="secondaryimg" pos="30 124" size="11 11"/>

                    <label id="comp2" pos="45 136" size="136 11" color="black"/>
                    <image id="comp2img" pos="30 136" size="11 11"/>

                    <label id="adverse2" pos="45 148" size="136 11" color="black"/>
                    <image id="adverse2img" pos="30 148" size="11 11"/>
                </view>
            </switch>

            <buttonimage id="requestsTitle" size="80 48" pos="300 66" label="$(com.minecolonies.coremod.gui.citizen.requestTitle)"
                         source="minecolonies:textures/gui/citizen/colonist_request_button.png" textcolor="black"/>
            <buttonimage id="inventory" size="80 49" pos="300 131" label="$(container.inventory)"
                         source="minecolonies:textures/gui/citizen/colonist_inventory_button.png" textcolor="black"/>
        </view>
        <view id="requestsView" size="190 100%" pos="95 0">
            <layout source="minecolonies:gui/citizen/requests.xml"/>
        </view>
    </switch>

    <buttonimage id="prevPage" size="18 10" pos="108 13" source="minecolonies:textures/gui/builderhut/turn_page_left.png"/>
    <buttonimage id="nextPage" size="18 10" pos="254 13" source="minecolonies:textures/gui/builderhut/turn_page_right.png"/>
    <label id="pageNum" size="20 11" pos="254 222" textalign="MIDDLE" label="" color="black"/>
</window>
