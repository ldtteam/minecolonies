<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/ldtteam/BlockUI/version/main/src/main/resources/assets/blockui/gui/block_ui.xsd">
    <layout source="minecolonies:gui/layouthuts/layouthutpageactionsmin.xml"/>

    <text size="164 11" pos="13 32" textalign="MIDDLE" color="black"
           label="$(com.minecolonies.coremod.gui.workerhuts.workerassigned)"/>

    <list id="workers" size="164 30" pos="13 43">
        <view size="100% 11">
            <box size="100% 11" linewidth="0">
