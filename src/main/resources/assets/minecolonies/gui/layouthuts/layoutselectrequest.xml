<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/ldtteam/BlockUI/version/main/src/main/resources/assets/blockui/gui/block_ui.xsd"
    size="190 244" pause="false" lightbox="false">
    <image source="minecolonies:textures/gui/builderhut/builder_paper.png" size="190 244"/>
    <text size="120 11" pos="30 14" textalign="MIDDLE" color="black"
           label="$(com.minecolonies.coremod.gui.citizen.requests)"/>
    <button id="cancel" label="X" color="red" pos="160 11" size="14 15"
                 source="minecolonies:textures/gui/builderhut/builder_button_mini.png"/>

    <list id="requests" size="170 170" pos="13 30">
        <box id="requestx" size="100% 40" linewidth="1">
            <!--Item icon -->
            <itemicon id="requestStack" size="16 16" pos="1 3"/>
            <image id="deliveryImage" source="minecraft:textures/misc/shadow.png" size="16 16" pos="1 3" visible="false"/>

            <!--Request name-->
            <text id="shortDetail" size="130 12" pos="20 1" color="black"/>
            <text id="requester" size="130 12" pos="20 13" color="black"/>

            <button id="select" size="37 16" pos="20 23" color="black"
                         label="$(com.minecolonies.coremod.gui.scantool.select)"
                         source="minecolonies:textures/gui/builderhut/builder_button_small.png"/>
        </box>
    </list>
</window>
