<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" pause="false" lightbox="true"
        xsi:noNamespaceSchemaLocation="file:../../../../../api/java/com/minecolonies/blockout/blockOut.xsd">

    <label size="100% 11" pos="0 20" textalign="MIDDLE" color="white" label="$(com.minecolonies.coremod.gui.hiring.description)"/>
    <list id="unemployed" size="100% 120" pos="0 40">
        <view size="100% 40">
            <label id="citizen" size="175 12" pos="10 4" textalign="MIDDLE_LEFT" color="yellow"/>
            <button id="done" size="45 15" pos="190 2" label="$(com.minecolonies.coremod.gui.hiring.buttonHire)"/>
            <button id="fire" size="45 15" pos="190 2" label="$(com.minecolonies.coremod.gui.hiring.buttonFire)"/>
            <button id="pause" size="65 15" pos="240 2" label=""/>
            <button id="restart" size="65 15" pos="310 2" label="$(com.minecolonies.coremod.gui.hiring.restart)"/>
            <label id="attributes" size="100% 24" pos="0 16" textalign="MIDDLE_LEFT" color="white"/>
        </view>
    </list>
    <label id="buildingHireMode" size="100% 11" pos="0 165" textalign="MIDDLE" color="white" label="$(com.minecolonies.coremod.gui.buildinghiremode)"/>
    <button id="mode" size="200 20" pos="110 175"/>

    <label id="autoHireWarn" size="100% 11" pos="0 200" textalign="MIDDLE" color="white" label="$(com.minecolonies.coremod.gui.auto.hire.warning)"/>
    <button id="cancel" size="200 20" pos="110 215" label="$(gui.cancel)"/>
</window>
