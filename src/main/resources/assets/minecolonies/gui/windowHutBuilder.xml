<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" size="190 244" pause="false"
        lightbox="false"
        xsi:noNamespaceSchemaLocation="file:../../../../java/com/minecolonies/blockout/blockOut.xsd">

    <image source="minecolonies:textures/gui/builderhut/builder_papper_sketch.png" size="100% 100%"/>
    <image source="minecolonies:textures/gui/builderhut/builder_charcoal_chalk.png" size="19 59" pos="175 180"/>

    <switch id="pages" size="100% 200px" pos="0 7">

        <view id="pageActions" size="100% 200px" pos="0 7">
            <image source="minecolonies:textures/gui/builderhut/builder_sketch_left.png" size="6 15" pos="44 -2"/>
            <image source="minecolonies:textures/gui/builderhut/builder_sketch_center.png" size="90 15" pos="50 -2"/>
            <image source="minecolonies:textures/gui/builderhut/builder_sketch_right.png" size="6 15" pos="140 -2"/>

            <label id="name" size="100% 11" pos="0 0"
                   textalign="MIDDLE" color="red"/>
            <label size="100% 11" pos="0 18"
                   label="$(com.minecolonies.coremod.gui.workerHuts.workerAssigned)"
                   textalign="MIDDLE" color="black"/>
            <label id="workerName" size="100% 11" pos="0 28"
                   textalign="MIDDLE" color="black"/>
            <label id="workerLevel" size="100% 11" pos="0 44"
                   textalign="MIDDLE" color="black"/>

            <buttonimage id="hire" align="TOP_MIDDLE" size="129 17" pos="0 64"
                         source="minecolonies:textures/gui/builderhut/builder_button_medium_large.png"
                         label="$(com.minecolonies.coremod.gui.workerHuts.hire)" textcolor="black"/>
            <buttonimage id="recall" align="TOP_MIDDLE" size="129 17" pos="0 88"
                         source="minecolonies:textures/gui/builderhut/builder_button_medium_large.png"
                         label="$(com.minecolonies.coremod.gui.workerHuts.recall)" textcolor="black"/>
            <buttonimage id="build" align="TOP_MIDDLE" size="129 17" pos="0 120"
                         source="minecolonies:textures/gui/builderhut/builder_button_medium_large.png"
                         label="$(com.minecolonies.coremod.gui.workerHuts.upgrade)" textcolor="black"/>
            <buttonimage id="repair" align="TOP_MIDDLE" size="129 17" pos="0 144"
                         source="minecolonies:textures/gui/builderhut/builder_button_medium_large.png"
                         label="$(com.minecolonies.coremod.gui.workerHuts.repair)" textcolor="black"/>

            <label size="100% 11" pos="0 172"
                   label="$(com.minecolonies.coremod.gui.workerHuts.buildType)"
                   textalign="MIDDLE" color="black"/>
            <label id="type" size="100% 11" pos="0 182"
                   textalign="MIDDLE" color="black"/>
        </view>

        <view id="resourceActions" size="100% 100%">
            <label size="100% 11" pos="0 0"
                   label="$(com.minecolonies.coremod.gui.workerHuts.resourceList)" color="black"
                   textalign="BOTTOM_MIDDLE"/>
            <list id="resources" size="78% 85%" pos="30 20">
                <box size="100% 30" linewidth="2">
                    <itemicon id="resourceIcon" size="16 16" pos="1 1"/>
                    <label id="resourceName" size="100 12" pos="20 3" textalign="MIDDLE_LEFT" color="black"/>
                    <label id="resourceMissing" size="50 12" pos="2 18" textalign="MIDDLE_LEFT" color="black"/>
                    <label id="resourceAvailableNeeded" size="100% 12" pos="0 18" textalign="MIDDLE" color="black"/>

                    <buttonimage id="resourceAdd" size="14 17" label="â†¥" pos="100 12"
                                 source="minecolonies:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>

                    <label id="resourceId" size="1 1" pos="100 100"/>
                    <label id="resourceQuantity" size="1 1" pos="100 100"/>
                </box>
            </list>

        </view>


    </switch>
    <buttonimage id="prevPage" align="TOP_LEFT" size="26 8" pos="12 15" source="minecolonies:textures/gui/builderhut/builder_sketch_arrow_left_c.png"/>
    <buttonimage id="nextPage" align="TOP_RIGHT" size="26 8" pos="12 15" source="minecolonies:textures/gui/builderhut/builder_sketch_arrow_right_c.png"/>


    <buttonimage id="inventory"
            align="BOTTOM_MIDDLE" size="86 17" pos="0 13"
            label="$(container.inventory)" source="minecolonies:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>
</window>