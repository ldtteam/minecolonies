            <layout source="minecolonies:gui/layouthuts/layouthutpageactionswoinv.xml"/>
        </view>
        <view id="resourceActions" size="100% 100%">
            <image source="minecolonies:textures/gui/builderhut/builder_papper.png" size="190 244"/>
            <label size="130 11" pos="30 14" textalign="MIDDLE" color="black"
                   label="$(com.minecolonies.coremod.gui.workerHuts.resourceList)"/>

            <label size="164 11" pos="13 29" id="constructionName" textalign="MIDDLE" label="" color="black"/>
            <label size="164 11" pos="13 40" id="constructionPos" textalign="MIDDLE" label="" color="black"/>
            <label size="164 11" pos="13 51" id="progress" textalign="MIDDLE" label="" color="black"/>
            <list id="resources" size="164 163" pos="13 62">
                <box size="100% 30" linewidth="2">
                    <itemicon id="resourceIcon" size="16 16" pos="1 1"/>
                    <label id="resourceName" size="100 12" pos="20 3" textalign="MIDDLE_LEFT" color="black"/>
                    <label id="resourceMissing" size="50 12" pos="2 18" textalign="MIDDLE_LEFT" color="black"/>
                    <label id="resourceAvailableNeeded" size="100% 12" pos="0 18" textalign="MIDDLE" color="black"/>

                    <buttonimage id="resourceAdd" size="14 15" label="â†¥" pos="100 12"
                                 source="minecolonies:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>

                    <label id="resourceId" size="1 1" pos="100 100"/>
                    <label id="resourceQuantity" size="1 1" pos="100 100"/>
                </box>
            </list>
        </view>
    </switch>
    <buttonimage id="prevPage" size="18 10" pos="13 13" source="minecolonies:textures/gui/builderhut/turn_page_left.png"/>
    <buttonimage id="nextPage" size="18 10" pos="159 13" source="minecolonies:textures/gui/builderhut/turn_page_right.png"/>
    <label id="pageNum" size="20 11" pos="158 222" textalign="MIDDLE" label="" color="black"/>
    <buttonimage id="inventory" size="86 17" pos="52 214" textcolor="black"
                source="minecolonies:textures/gui/builderhut/builder_button_medium.png"
                label="$(container.inventory)"/>

    <image source="minecolonies:textures/gui/builderhut/builder_charcoal_chalk.png" size="19 59" pos="175 180"/>
</window>