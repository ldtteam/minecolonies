<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" size="190 244" pause="false"
        lightbox="false"
        xsi:noNamespaceSchemaLocation="file:../../../../../api/java/com/minecolonies/blockout/blockOut.xsd">
    <switch id="pages" size="100% 100%">
        <view id="pageActions" size="100% 100%">
            <layout source="minecolonies:gui/layouthuts/layouthutpageactions.xml"/>
        </view>
        <view id="levelActions" size="100% 100%">
            <image source="minecolonies:textures/gui/builderhut/builder_paper.png" size="190 244"/>
            <label size="130 11" pos="30 14" textalign="MIDDLE" color="black"
                   label="$(com.minecolonies.coremod.gui.workerhuts.guardActions)"/>

            <buttonimage id="job" size="86 17" pos="52 29" textcolor="black"
                         source="minecolonies:textures/gui/builderhut/builder_button_medium.png"
                         label="$(com.minecolonies.coremod.gui.workerhuts.knight)"/>

            <label size="164 11" pos="13 48" color="black" textalign="MIDDLE"
                   label="$(com.minecolonies.coremod.gui.workerhuts.assign)"/>
            <buttonimage id="assign" size="86 17" pos="52 59" textcolor="black"
                         source="minecolonies:textures/gui/builderhut/builder_button_medium.png"
                         label="$(com.minecolonies.coremod.gui.workerhuts.modeA)"/>

            <label size="164 11" pos="13 78" color="black" textalign="MIDDLE"
                   label="$(com.minecolonies.coremod.gui.workerhuts.patrol)"/>
            <buttonimage id="patrol" size="86 17" pos="52 89" textcolor="black"
                         source="minecolonies:textures/gui/builderhut/builder_button_medium.png"
                         label="$(com.minecolonies.coremod.gui.workerhuts.modeA)"/>

            <label size="164 11" pos="13 108" color="black" textalign="MIDDLE"
                   label="$(com.minecolonies.coremod.gui.workerhuts.retrieve)"/>
            <buttonimage id="retrieve" size="86 17" pos="52 119" textcolor="black"
                         source="minecolonies:textures/gui/builderhut/builder_button_medium.png"
                         label="$(com.minecolonies.coremod.gui.workerhuts.retrieveOff)"/>

            <label size="174 11" pos="9 138" color="black" textalign="MIDDLE"
                   label="$(com.minecolonies.coremod.gui.workerhuts.trainees)"/>
            <buttonimage id="trainees" size="86 17" pos="52 149" textcolor="black"
                         source="minecolonies:textures/gui/builderhut/builder_button_medium.png"
                         label="$(com.minecolonies.coremod.gui.workerhuts.retrieveOn)"/>

            <button id="patrolling" size="40% 14" pos="15 169"
                    label="$(com.minecolonies.coremod.gui.workerhuts.task.patrol)"/>
            <button id="following" size="40% 14" pos="93 169"
                    label="$(com.minecolonies.coremod.gui.workerhuts.task.follow)"/>
            <button id="guarding" size="40% 14" pos="15 184"
                    label="$(com.minecolonies.coremod.gui.workerhuts.task.guard)"/>
            <button id="mine" size="40% 14" pos="93 184"
                    label="$(com.minecolonies.coremod.gui.workerhuts.task.patrolmine)"/>

            <label id="minePos" size="164 24" pos="13 199" color="black" textalign="MIDDLE" />
            <buttonimage id="setTarget" size="129 17" pos="30 199" textcolor="black"
                         source="minecolonies:textures/gui/builderhut/builder_button_medium_large.png"
                         label="$(com.minecolonies.coremod.gui.workerhuts.setTarget)"/>


            <list id="positions" size="134 30" pos="13 201">
                <box size="100% 15" linewidth="2">
                    <label id="position" size="100 12" pos="5 2" textalign="MIDDLE_LEFT" color="black"/>
                </box>
            </list>
        </view>
    </switch>
    <buttonimage id="prevPage" size="18 10" pos="13 13" source="minecolonies:textures/gui/builderhut/turn_page_left.png"/>
    <buttonimage id="nextPage" size="18 10" pos="159 13" source="minecolonies:textures/gui/builderhut/turn_page_right.png"/>
    <label id="pageNum" size="20 11" pos="158 222" textalign="MIDDLE" label="" color="black"/>
</window>
