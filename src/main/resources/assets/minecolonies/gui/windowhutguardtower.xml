<window inherit="minecolonies:gui/windowBase.xml">
    <switch id="pages" size="100% 200px" pos="0 7">
        <view id="pageActions" size="100% 100%">
            <layout source="minecolonies:gui/layoutWorkerBuildingDefault.xml"/>
        </view>

        <view id="levelActions" size="100% 100%">

            <label size="100% 11" pos="0 0"
                   label="$(com.minecolonies.coremod.gui.workerHuts.guardActions)" color="black"
                   textalign="BOTTOM_MIDDLE"/>

            <button id="job" size="50% 15" pos="40 15" label="$(com.minecolonies.coremod.gui.workerHuts.knight)"/>

            <label size="50% 11" pos="40 30" label="$(com.minecolonies.coremod.gui.workerHuts.assign)" color="black"
                   textalign="BOTTOM_MIDDLE"/>
            <button id="assign" size="50% 12" pos="40 45" label="$(com.minecolonies.coremod.gui.workerHuts.modeA)"/>
            <label size="50% 11" pos="40 60" label="$(com.minecolonies.coremod.gui.workerHuts.patrol)" color="black"
                   textalign="BOTTOM_MIDDLE"/>
            <button id="patrol" size="50% 12" pos="40 75" label="$(com.minecolonies.coremod.gui.workerHuts.modeA)"/>

            <label size="50% 11" pos="40 90" label="$(com.minecolonies.coremod.gui.workerHuts.retrieve)" color="black"
                   textalign="BOTTOM_MIDDLE"/>
            <button id="retrieve" size="50% 12" pos="40 105"
                    label="$(com.minecolonies.coremod.gui.workerHuts.retrieveOff)"/>

            <button id="patrolling" size="30% 14" pos="10 125"
                    label="$(com.minecolonies.coremod.gui.workerHuts.task.patrol)"/>
            <button id="following" size="30% 14" pos="62 125"
                    label="$(com.minecolonies.coremod.gui.workerHuts.task.follow)"/>
            <button id="guarding" size="30% 14" pos="114 125"
                    label="$(com.minecolonies.coremod.gui.workerHuts.task.guard)"/>

            <button id="setTarget" size="75% 12" pos="25 140"
                    label="$(com.minecolonies.coremod.gui.workerHuts.setTarget)"/>


            <list id="positions" size="78% 50" pos="30 155">
                <box size="100% 15" linewidth="2">
                    <label id="position" size="100 12" pos="5 2" textalign="MIDDLE_LEFT" color="black"/>
                </box>
            </list>

        </view>


    </switch>
    <button id="prevPage" align="TOP_LEFT" size="20 20" pos="10 5" label="&lt;&lt;"/>
    <button id="nextPage" align="TOP_RIGHT" size="20 20" pos="10 5" label="&gt;&gt;"/>

    <button id="inventory"
            align="BOTTOM_MIDDLE" size="116 20" pos="0 13"
            label="$(container.inventory)"/>
</window>
